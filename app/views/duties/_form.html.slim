= form_for @duty do |f|
  - if @duty.errors.any?
    #error_explanation
      h2 = "#{pluralize(@duty.errors.count, "error")} prohibited this duty from being saved:"
      ul
        - @duty.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :employee
    = f.collection_select :employee_id, Employee.all, :id, :name
  .field
    = f.label :customer
    = f.collection_select :customer_id, Customer.all, :id, :name
  .field
    = f.label :date
    = f.datetime_select :date
  .field
    = f.label :duration
    = f.number_field :duration
  .actions = f.submit
